import random

def jogo_adivinhação():
    numero_aleatorio  = random.randint(1,10)
    tentativas = 0
    
    print("Bem vindo ao jogo de adivinhação!")
    print("Tente adivinhar o nùmero entre 1 e 10")
    
    while True:
        tentativa = int(input("Digite suas tentativas:"))
        tentativas +=1
        
        if tentativas == 8:
            print(f"Você tentou {tentativas} vezes; Perdeu ")
            break
        
        for tentativa in range(max tentativa):
            palpite = int(input("Digite sua tentativa: "))
            
            if palpite < numero_aleatorio:
                print("Muito baixo. Tente um número maior.")
            elif palpite < numero_aleatorio:
                print("Muito alto. Tente um número maior.")
            else:
                print(f"Parabens! Você acertou o número (numero_aleatorio) em "
                      f"{tentativa * 1} tentativas!")
                return
            
            print(f"Suas {max_tentativas} tentativas acabaram."
                  f" O numero correto era {numero_aleatorio}.")
            
            if __name__ == "__main__":
                jogo_adivinhação()
                
